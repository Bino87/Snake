<UserControl x:Class="UserControls.Controls.SimulationRunner.ProgressGraphLineControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UserControls.Controls.SimulationRunner"
             xmlns:simulationRunner="clr-namespace:UserControls.Models.SimulationRunner"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance simulationRunner:ProgressGraphLineViewModel}">
    <Line Stroke="Blue" StrokeThickness="1.5"
          X1="{Binding X1}"
          X2="{Binding X2}"
          Y1="{Binding Y1}"
          Y2="{Binding Y2}"
    />
</UserControl>
