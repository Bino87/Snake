<UserControl x:Class="UserControls.Controls.NeuralNetWizard.NeuralNetWizardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:neuralNetWizard="clr-namespace:UserControls.Models.NeuralNetWizard"
             xmlns:neuralNetDisplay="clr-namespace:UserControls.Controls.NeuralNetDisplay"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance neuralNetWizard:NeuralNetWizardViewModel}">
    <StackPanel Orientation="Horizontal" VerticalAlignment="Top" >
        <GroupBox Header=" Neural Net Display">
            <neuralNetDisplay:NeuralNetDisplayControl DataContext="{Binding Path=NeuralNetDisplay}" />
        </GroupBox>
        <GroupBox Header="Settings">
            <StackPanel Orientation="Vertical" VerticalAlignment="Top">
                <GroupBox Header="Input">
                    <TextBox Margin="2" Text="{Binding NumberOfInputs}"/>
                </GroupBox>
                <GroupBox Header="Hidden Layers">
                    <StackPanel Orientation="Vertical">
                        <ListView ItemsSource="{Binding HiddenLayers}"/>
                        <Button Margin="2" Content="Add Layer" HorizontalAlignment="Right" Command="{Binding AddLayer}"></Button>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Output" >
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
                        <TextBox MinWidth="50" Margin="2" Text="{Binding NumberOfOutputs}"/>
                        <ComboBox HorizontalAlignment="Right" Margin="2" SelectedIndex="0" SelectedItem="{Binding SelectedActivationFunctionType}" ItemsSource="{Binding ActivationFunctionTypes}"/>
                    </StackPanel>
                </GroupBox>
            <Button HorizontalAlignment="Right" Content="Create Template" Command="{Binding CreateTemplate}"/>
            </StackPanel>
        </GroupBox>
        



    </StackPanel>
</UserControl>
