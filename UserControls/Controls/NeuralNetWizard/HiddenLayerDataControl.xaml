<UserControl x:Class="UserControls.Controls.NeuralNetWizard.HiddenLayerDataControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:neuralNetWizard="clr-namespace:UserControls.Models.NeuralNetWizard"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance neuralNetWizard:HiddenLayerDataViewModel}">
    <StackPanel Orientation="Horizontal">
        <TextBox Margin="2" MinWidth="50" HorizontalAlignment="Stretch" Text="{Binding Path=NumberOfNodes}"/>
        <ComboBox Margin="2" SelectedIndex="0" SelectedItem="{Binding Path=SelectedActivationFunctionType}" ItemsSource="{Binding ActivationFunctionTypes}" ></ComboBox>

        <Button Margin="2" Content="Remove" Command="{Binding Remove}"/>
    </StackPanel>
</UserControl>
