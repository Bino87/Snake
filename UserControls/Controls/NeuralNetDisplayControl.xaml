<UserControl x:Class="UserControls.Controls.NeuralNetDisplayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:models="clr-namespace:UserControls.Models"
             xmlns:constants="clr-namespace:UserControls.Constants"
             xmlns:templateSelectors="clr-namespace:UserControls.TemplateSelectors"
             xmlns:neuralNetDisplay="clr-namespace:UserControls.Models.NeuralNetDisplay"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance models:NeuralNetDisplayViewModel}">
    <StackPanel>
        <StackPanel.Resources>
            <templateSelectors:NeuralNetDisplayShapeTemplateSelector  x:Key="NetDisplayShapeTemplateSelector"/>
        </StackPanel.Resources>
        <ItemsControl ItemsSource="{Binding Path=DisplayItems }"
                        ItemTemplateSelector="{StaticResource NetDisplayShapeTemplateSelector}">
            <ItemsControl.Resources>
                <DataTemplate x:Key="{x:Static constants:Cons.cShapeCircleDataTemplate}" DataType="neuralNetDisplay:PrimitiveCircle">
                    <Ellipse Width="{Binding Path=Width}" 
                             Height="{Binding Path=Height}"
                             Fill="Blue">
                        <Ellipse.RenderTransform>
                            <TranslateTransform X="{Binding X}" Y="{Binding Y}"/>
                        </Ellipse.RenderTransform>
                    </Ellipse>
                </DataTemplate>
                <DataTemplate x:Key="{x:Static constants:Cons.cShapeLineDataTemplate}" DataType="neuralNetDisplay:PrimitiveLine" >
                    <Line X1="{Binding X}"
                          X2="{Binding X2}" 
                          Y1="{Binding Y}" 
                          Y2="{Binding Path=Y2}" 
                          Stroke="Black"
                          StrokeThickness="1"/>
                </DataTemplate>
            </ItemsControl.Resources>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas Background="LightGray" Width="{x:Static constants:Cons.cNetWidth}" Height="{x:Static constants:Cons.cNetHeight}"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </StackPanel>
</UserControl>
