<UserControl x:Class="UserControls.Controls.MainControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:models="clr-namespace:UserControls.Models"
             xmlns:controls="clr-namespace:UserControls.Controls"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance models:MainViewModel}">
    <StackPanel Orientation="Horizontal" VerticalAlignment="Top" >

        <controls:NeuralNetDisplayControl DataContext="{Binding Path=.NeuralNetDisplay}" />

        <StackPanel Orientation="Vertical">
            <TextBox VerticalAlignment="Top" Width="100" Height="25" Text="{Binding Path=Deley, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="{Binding Path=Generation, StringFormat=Generation: {0}}"/>
            <TextBlock Text="{Binding Path=Individual, StringFormat=Individual: {0}}"></TextBlock>

        </StackPanel>
        <controls:SnakeMapControl DataContext="{Binding Path=SnakeMapViewModel}"/>
    </StackPanel>
</UserControl>
